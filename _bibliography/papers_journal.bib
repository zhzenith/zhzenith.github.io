@article{zhu2014mechanical,
  title={Mechanical deformation analysis and high-precision control for ball-screw-driven stages},
  author={Zhu, Hongzhong and Fujimoto, Hiroshi},
  preview={ballScrewStage.png},
  show_bib={true},
