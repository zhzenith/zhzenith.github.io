@article{zhu2021unified,
  title={A unified seakeeping and maneuvering analysis of multiple linked towing system with triangular Bodies},
  author={Zhu, Hongzhong and Hu, Changhong},
  preview={shipTowing.png},
  show_bib={true},
  highlight={Spotlight},
  selected={true},
  website={https://doi.org/10.1016/j.oceaneng.2021.108577},
  pdf={https://www.researchgate.net/publication/348787969_A_unified_seakeeping_and_maneuvering_analysis_of_multiple_linked_towing_system_with_triangular_Bodies},
  journal={Ocean Engineering},
  abstract={Three-legged triangular tension leg platforms (TLPs), which are a kind of compliant-type floating structure, are drawing attention 
  from industrial society. To reduce the transportation cost, a multiple linked ship towing system that the platform and anchor are linked and 
  wet towed is studied. A unified seakeeping and maneuvering method which can take account of the hydrodynamic interaction between the bodies 
  and utilize the experimental results for tuning the damping coefficients is proposed to model the towing system. In the method, a low-pass filter 
  is applied to separate the slowly and fast motion components for the maneuvering and seakeeping calculations. The maneuvering and seakeeping 
  problems can thus be solved simultaneously with a same time scale. SimMechanics™, which provides multi-body simulation environment for mechanical 
  systems, is applied to implement the numerical model for studying the fully coupled six degrees-of-freedom (DOFs) motion of the towing system. 
  Besides, experiments are carried out to demonstrate the feasibility of the system and the effectiveness of the numerical model. A circular motion 
  in irregular waves is studied at the end and the issues of the system are discussed accordingly.},
  volume={222},
  pages={108577},
  year={2021},
  publisher={Pergamon}
}

@article{zhu2021study,
  title={A study on floating overhead power transmission system for offshore energy development: Design and modeling approach},
  author={Zhu, Hongzhong and Hu, Changhong},
  preview={TLP_FOPT.png},
  show_bib={true},
  highlight={Spotlight},
  selected={true},
  website={https://doi.org/10.1016/j.oceaneng.2021.109528},
  pdf={https://www.researchgate.net/publication/353538707_A_Study_on_Floating_Overhead_Power_Transmission_System_for_Offshore_Energy_Development_Design_and_Modeling_Approach},
  journal={Ocean Engineering},
  abstract={In this paper, a floating overhead power transmission system (FOPTS), which has the potentiality to lower the electricity transmission cost 
  for offshore renewable energy, is studied. In the design, a sheave mechanism is applied to mount one end of conductor on its supportive tower so that 
  the coupling effects between the conductor and its supportive towers are reduced. Then, a mathematical optimization approach, which can take account 
  of the placement of system's natural frequencies to avoid first-order wave excitation, is presented to design the properties of the floating 
  foundation and conductor. In the model-ing, the flexibility of the conductor is handled and both the first-and second-order wave loads are 
  considered. The aero-hydro-elastic dynamics of the system would be analyzed by the numerical model. Finally, a moderate FOPTS in a harsh ocean 
  environment with wind speed of 70 m/s and significant wave height of 14 m is studied with emphasis on the wind-wave misalignment. The feasibility 
  and issues of the system are discussed based on fully coupled time-domain simulation.},
  volume={236},
  pages={109528},
  year={2021},
  publisher={Pergamon}
}

