@article{zhu2016optimum,
  title={Optimum design of a passive suspension system of a semisubmersible for pitching reduction},
  author={Zhu, Hongzhong and Hu, Changhong and Liu, Yingyi},
  preview={hybridSuspension.png},
  show_bib={true},
